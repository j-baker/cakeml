INCLUDES = .. ../bytecode ../semantics ../semantics/proofs ../inference ../inference/proofs ../metatheory ../compiler ../compiler/proofs

OPTIONS = QUIT_ON_FAILURE

ifdef POLY
HOLHEAP = heap
PARENTHEAP = ../compiler/proofs/heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o

THYFILES = $(patsubst %Script.sml,%Theory.uo,$(wildcard *.sml))
TARGETS = $(patsubst %.sml,%.uo,$(THYFILES))
all: $(TARGETS) $(HOLHEAP)
.PHONY: all

BARE_THYS = ../semantics/initialProgramTheory ../semantics/proofs/initSemEnvTheory ../semantics/proofs/interpTheory ../inference/proofs/inferSoundTheory ../compiler/proofs/compilerProofTheory ../metatheory/typeSoundTheory ../inference/compute_inferenceLib ../compiler/compute_compilerLib ../compiler/proofs/compute_free_varsLib

DEPS = $(patsubst %,%.uo,$(BARE_THYS)) $(PARENTHEAP)

$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -b $(PARENTHEAP) -o $(HOLHEAP) $(BARE_THYS)
endif

